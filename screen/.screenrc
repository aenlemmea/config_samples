truecolor on
# term screen-256color
term xterm-256color
# termcapinfo xterm*|rxvt*|kterm*|Eterm*|screen* ti@:te@
startup_message off
vbell off
defscrollback 10000

altscreen on
detach on exit

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d-%m ]'
